@model Car

<div class="col-lg-4">
    <img src="@Model.Img" alt="@Model.Name" class="img-thumbnail" />
    <h2>Модель: @Model.Name</h2>
    <p>@Model.ShortDesc</p>
    <p>Цена: @Model.Price.ToString("c")</p>
    <p><a class="btn btn-warning" 
          asp-controller="ShopCart" 
          asp-action="AddToCart"   
          asp-route-id="@Model.Id"
          >Добавить в корзину</a></p>
</div>